@model ResultRecipeDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeaderComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>

    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class=" breadcrumb-item text-white" href="/Default/Index/">Ana Sayfa</a>
                    <span class="breadcrumb-item active">Yemek Tarifleri</span>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Tahmini Süre</th>
                            <th>Tarifi İzle</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.Results)
                        {
                            <tr>
                                <td><img src="@item.Thumbnail_Url" alt="@item.Name" style="width:50px;height:50px" /></td>
                                <td>@item.Name</td>
                                <td>@item.Total_Time_Minutes</td>
                                <td><a href="@item.Original_Video_Url" target="_blank" class="btn btn-warning">Tarifi İzle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptsComponentPartial")
</body>

</html>
