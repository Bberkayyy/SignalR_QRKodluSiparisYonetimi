@model CreateReservationDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeaderComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>

    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post" asp-action="MakeReservation" asp-controller="Reservation">
                            <div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız" />
                            </div>
                            <div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                                <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız" />
                            </div>
                            <div>
                                <span asp-validation-for="Mail" class="text-danger"></span>
                                <input type="email" class="form-control" asp-for="Mail" placeholder="Email adresiniz" />
                            </div>
                            <div>
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="" disabled selected>
                                        Kaç Kişisiniz?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6+
                                    </option>
                                </select>
                            </div>
                            <div>
                                <span asp-validation-for="Date" class="text-danger"></span>
                                <input type="date" class="form-control" asp-for="Date">
                            </div>
                            <div class="btn_box">
                                <button>
                                    Rezervasyon Yap
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2192.0034949268525!2d29.037101625791575!3d40.98780394807166!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab870784d1389%3A0x2bf4921764859e70!2zw5xsa2VyIEZlbmVyYmFow6dlIMWew7xrcsO8IFNhcmFjb8SfbHUgU3RhZHl1bXU!5e0!3m2!1str!2str!4v1726559275212!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptsComponentPartial")

</body>

</html>