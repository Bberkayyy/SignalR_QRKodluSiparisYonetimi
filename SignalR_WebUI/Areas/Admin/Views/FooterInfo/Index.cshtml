@model IList<ResultFooterInfoDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Alt Bilgi İşlemleri</h4>
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Alt Bilgi Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Alt bilgi alanı ile ilgili işlemleri buradan yapabilirsiniz. Sayfa düzeni için sadece <strong>1 adet</strong> alt bilgi bulunmalıdır.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.title</td>
                                    <td>@item.description</td>
                                    <td><a href="/Admin/FooterInfo/DeleteFooterInfo/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                    <td><a href="/Admin/FooterInfo/UpdateFooterInfo/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p class="card-sub"><strong>Yeni alt bilgi ekleyebilmek için mevcut alt bilgi silinmelidir.</strong></p>
                </div>
            </div>
        }
        else
        {
            <p class="bg-danger text-white p-4 text-center card-body table-responsive">Alt bilgi bulunamadı. Alt bilgi eklemek için "Alt Bilgi Ekle" butonuna tıklayınız.</p>
            <a href="/Admin/FooterInfo/CreateFooterInfo/" class="btn btn-outline-primary">Alt Bilgi Ekle</a>
        }
    </div>
</div>
