@model CreateOrderDto
@{
    ViewData["Title"] = "CreateOrder";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}
<script>
    $(document).ready(function () {
        $("#restaurantTableDropdown option:first").attr('disabled', 'disabled');
    });
</script>

<div class="container-fluid">
    <h4 class="page-title">Sipariş İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Sipariş Ekleme Sayfası</div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="tableName">Masa Adı</label>
                            @Html.DropDownListFor(x => x.TableName, (IList<SelectListItem>)ViewBag.restaurantTables, "Masa Seçiniz", new { @class = "form-control", id = "restaurantTableDropdown" })
                        </div>
                        <div class="form-group">
                            <label for="description">Açıklaması</label>
                            <input type="text" class="form-control" asp-for="Description" id="description" />
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>