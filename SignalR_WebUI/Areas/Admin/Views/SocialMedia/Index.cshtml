@model IList<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
    int count = 0;
}
<div class="container-fluid">
    <h4 class="page-title">Sosyal Medya İşlemleri</h4>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Sosyal Medya Hesapları</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Sosyal medya hesapları ile ilgili işlemleri buradan yapabilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Sosyal Medya Adı</th>
                            <th scope="col">Linki</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.name</td>
                                <td>@item.url</td>
                                <td><a href="/Admin/SocialMedia/DeleteSocialMedia/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                <td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">Sosyal Medya Ekle</a>
            </div>
        </div>
    </div>
</div>