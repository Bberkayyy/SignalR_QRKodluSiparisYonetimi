@model IList<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
    int count = 0;
}
<div class="container-fluid">
    <h4 class="page-title">Ana Sayfa İletişim İşlemleri</h4>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">İletişim Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    İletişim ile ilgili işlemleri buradan yapabilirsiniz. Sayfa düzeni için sadece 1 tane iletişim bilgisi bulunmalıdır.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Konum</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Email</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.location</td>
                                <td>@item.phone</td>
                                <td>@item.mail</td>
                                <td>@item.footerDescription</td>
                                <td><a href="/Admin/Contact/DeleteContact/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                <td><a href="/Admin/Contact/UpdateContact/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Contact/CreateContact/" class="btn btn-outline-primary">İletişim Bilgisi Ekle</a>
            </div>
        </div>
    </div>
</div>