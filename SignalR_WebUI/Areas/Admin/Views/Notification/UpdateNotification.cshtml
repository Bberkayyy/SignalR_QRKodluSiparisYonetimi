@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Bildirim İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Bildirim Güncelleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="type">Bildirim Türü</label>
                            <input type="text" class="form-control" asp-for="Type" id="type">
                        </div>
                        <div class="form-group">
                            <label for="icon">Bildirim İkonu Linki</label>
                            <input type="text" class="form-control" asp-for="Icon" id="icon">
                        </div>
                        <div class="form-group">
                            <label for="description">Açıklama</label>
                            <textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>