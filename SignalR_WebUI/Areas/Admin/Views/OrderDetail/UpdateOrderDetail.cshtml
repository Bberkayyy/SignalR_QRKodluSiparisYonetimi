@model UpdateOrderDetailDto
@{
    ViewData["Title"] = "UpdateOrderDetail";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Sipariş İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Siparişe Ürün Ekleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OrderId" value="@ViewBag.orderId" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="tableName">Masa Adı</label>
                            <input type="text" class="form-control" disabled value="@ViewBag.restaurantTableName" />
                        </div>
                        <div class="form-group">
                            <label for="tableName">Ürün Adı</label>
                            @Html.DropDownListFor(x => x.ProductId, (IList<SelectListItem>)ViewBag.productList, new { @class = "form-control", id = "productDropdown", disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label for="productCount">Ürün Adedi</label>
                            <input type="number" class="form-control" asp-for="ProductCount" id="productCount" />
                        </div>
                        <input type="hidden" class="form-control" asp-for="UnitPrice" id="unitPrice" />
                        <input type="hidden" class="form-control" asp-for="TotalPrice" id="totalPrice" />
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>