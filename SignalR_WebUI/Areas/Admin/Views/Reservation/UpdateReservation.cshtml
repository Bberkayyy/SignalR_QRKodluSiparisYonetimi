@model UpdateReservationDto
@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Rezervarsyon İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Rezervasyon Güncelleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Description" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Rezervasyon Adı</label>
                            <input type="text" class="form-control" asp-for="Name" id="name">
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefon</label>
                            <input type="text" class="form-control" asp-for="Phone" id="phone">
                        </div>
                        <div class="form-group">
                            <label for="email">Email Adresi</label>
                            <input type="email" class="form-control" asp-for="Mail" id="email">
                        </div>
                        <div class="form-group">
                            <label for="personCount">Kişi Sayısı</label>
                            <input type="number" class="form-control" asp-for="PersonCount" id="personCount">
                        </div>
                        <div class="form-group">
                            <label for="date">Tarihi</label>
                            <input type="date" class="form-control" asp-for="Date" id="date">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>