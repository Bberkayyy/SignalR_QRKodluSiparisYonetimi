@model IList<ResultReservationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <h4 class="page-title">Rezervasyon İşlemleri</h4>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Rezervasyon Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Rezervasyon ile ilgili işlemleri buradan yapabilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Rezervasyon Adı</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Mail Adresi</th>
                            <th scope="col">Kişi Sayısı</th>
                            <th scope="col">Tarihi</th>
                            <th scope="col">Durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.name</td>
                                <td>@item.phone</td>
                                <td>@item.mail</td>
                                <td>@item.personCount</td>
                                <td>@item.date.ToString("dd MMM dddd HH:mm")</td>
                                <td>Rezervasyon durumu</td>
                                <td><a href="/Admin/Reservation/DeleteReservation/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                <td><a href="/Admin/Reservation/UpdateReservation/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Reservation/CreateReservation/" class="btn btn-outline-primary">Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>