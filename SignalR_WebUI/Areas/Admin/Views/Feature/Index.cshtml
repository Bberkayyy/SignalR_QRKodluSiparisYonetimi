@model IList<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Öne Çıkan Alan Listesi</div>
                </div>
                <div class="card-body">
                    <div class="card-sub">
                        Öne çıkan alan ile ilgili işlemleri buradan yapabilirsiniz. Sayfa düzeni için sadece <strong>1 adet</strong> öne çıkan alan bilgisi bulunmalıdır.
                    </div>
                    <table class="table mt-3">
                        <thead>
                            <tr>
                                <th scope="col">Başlık 1</th>
                                <th scope="col">Başlık 2</th>
                                <th scope="col">Başlık 3</th>
                                <th scope="col">Açıklama 1</th>
                                <th scope="col">Açıklama 2</th>
                                <th scope="col">Açıklama 3</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.title1</td>
                                    <td>@item.title2</td>
                                    <td>@item.title3</td>
                                    <td>@item.description1</td>
                                    <td>@item.description2</td>
                                    <td>@item.description3</td>
                                    <td><a href="/Admin/Feature/DeleteFeature/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                    <td><a href="/Admin/Feature/UpdateFeature/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p class="card-sub"><strong>Yeni öne çıkan alan bilgisi ekleyebilmek için mevcut öne çıkan alan bilgisi silinmelidir.</strong></p>
                </div>
            </div>
        }
        else
        {
            <p class="bg-danger text-white p-4 text-center card-body table-responsive">Öne çıkan alan bilgisi bulunamadı. Öne çıkan alan bilgisi eklemek için "Öne Çıkan Alan Ekle" butonuna tıklayınız.</p>
            <a href="/Admin/Feature/CreateFeature/" class="btn btn-outline-primary">Öne Çıkan Alan Ekle</a>
        }
    </div>
</div>

