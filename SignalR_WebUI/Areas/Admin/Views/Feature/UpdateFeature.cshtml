@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}
<div class="container-fluid">
    <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Öne Çıkan Alan Güncelleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title1">Başlık 1</label>
                            <input type="text" class="form-control" asp-for="Title1" id="title1">
                        </div>
                        <div class="form-group">
                            <label for="title2">Başlık 2</label>
                            <input type="text" class="form-control" asp-for="Title2" id="title2">
                        </div>
                        <div class="form-group">
                            <label for="title3">Başlık 3</label>
                            <input type="text" class="form-control" asp-for="Title3" id="title3">
                        </div>
                        <div class="form-group">
                            <label for="description1">Açıklama 1</label>
                            <input type="text" class="form-control" asp-for="Description1" id="description1">
                        </div>
                        <div class="form-group">
                            <label for="description2">Açıklama 2</label>
                            <input type="text" class="form-control" asp-for="Description2" id="description2">
                        </div>
                        <div class="form-group">
                            <label for="description3">Açıklama 3</label>
                            <input type="text" class="form-control" asp-for="Description3" id="description3">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>