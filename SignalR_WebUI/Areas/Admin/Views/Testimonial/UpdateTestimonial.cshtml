@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Referans İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Müşteri Yorumu Güncelleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Müşteri Adı</label>
                            <input type="text" class="form-control" asp-for="Name" id="name">
                        </div>
                        <div class="form-group">
                            <label for="title">Ünvanı</label>
                            <input type="text" class="form-control" asp-for="Title" id="title">
                        </div>
                        <div class="form-group">
                            <label for="comment">Yorum</label>
                            <input type="text" class="form-control" asp-for="Comment" id="comment">
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Görsel Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

