@model IList<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Müşteri Yorumu İşlemleri</h4>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Müşteri Yorumu Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Müşteri yorumları ile ilgili işlemleri buradan yapabilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Müşteri Adı</th>
                            <th scope="col">Ünvanı</th>
                            <th scope="col">Yorum</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.imageUrl</td>
                                <td>@item.name</td>
                                <td>@item.title</td>
                                <td>@item.comment</td>
                                <td>@item.status</td>
                                <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Müşteri Yorumu Ekle</a>
            </div>
        </div>
    </div>
</div>