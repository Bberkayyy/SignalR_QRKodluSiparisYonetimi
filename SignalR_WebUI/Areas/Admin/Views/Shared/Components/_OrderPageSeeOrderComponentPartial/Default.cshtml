@model IList<ResultOrderDetailDto>
<table class="table mt-3">
    <thead>
        <tr>
            <th></th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Birim Fiyatı</th>
            <th scope="col" class="text-center">Adeti</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.productName</td>
                    <td>@item.unitPrice ₺</td>
                    <td class="text-center">
                        <a href="/Admin/OrderDetail/DecreaseProductCount/@item.orderTableName/@item.id" class="btn btn-outline-dark" style="border:none;width:20px;height:20px; display: inline-flex; align-items: center; justify-content: center;"><i class="la la-minus"></i></a> @item.productCount <a href="/Admin/OrderDetail/IncreaseProductCount/@item.orderTableName/@item.id" class="btn btn-outline-dark" style="border:none;width:20px;height:20px; display: inline-flex; align-items: center; justify-content: center;"><i class="la la-plus"></i></a>
                    </td>
                    <td><a href="/Admin/OrderDetail/DeleteOrderDetail/@item.id" class="btn btn-outline-danger btn-round">Sil</a></td>
                    <td><a href="/Admin/OrderDetail/UpdateOrderDetail/@item.orderTableName/@item.id" class="btn btn-outline-success btn-round">Güncelle</a></td>

                </tr>
            }
        }
        else
        {
            <p class="bg-danger text-white p-4 text-center card-body table-responsive">Siparişe ait ürün bulunamadı. Siparişe ürün eklemek için "Masaya Ürün Ekle" butonuna tıklayınız.</p>
        }
    </tbody>
</table>