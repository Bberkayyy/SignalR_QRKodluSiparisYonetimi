@model UpdateDiscountOfDayDto
@{
    ViewData["Title"] = "UpdateDiscountOfDay";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Günün Ürünü İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Günün Ürünü Güncelleme Sayfası</div>
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">Ürün Adı</label>
                            <input type="text" class="form-control" asp-for="Title" id="title">
                        </div>
                        <div class="form-group">
                            <label for="amount">İndirim Oranı</label>
                            <input type="text" class="form-control" asp-for="Amount" id="amount">
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Görsel Url</label>
                            <input type="text" class="form-control" asp-for="Title" id="imageUrl">
                        </div>
                        <div class="form-group">
                            <label for="description">Açıklama</label>
                            <input type="text" class="form-control" asp-for="Description" id="description">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


