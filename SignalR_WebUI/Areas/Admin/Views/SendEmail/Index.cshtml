@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/AdminLayoutIndex.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Mail İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Mail Gönderme Sayfası</div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="receiverMail">Alıcı Mail</label>
                            <input type="email" class="form-control" asp-for="ReceiverMail" id="receiverMail">
                        </div>
                        <div class="form-group">
                            <label for="subject">Konu</label>
                            <input type="text" class="form-control" asp-for="Subject" id="subject">
                        </div>
                        <div class="form-group">
                            <label for="content">Mesaj</label>
                            <textarea rows="5" asp-for="Content" class="form-control" id="content"></textarea>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-success">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
